<div class="container">
<h1>Edit <%= @task.title %></h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <strong><%= f.label :title %></strong>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <strong><%= f.label :details %></strong>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p, class='form-control'><%= f.check_box :completed %> Completed</p>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>
